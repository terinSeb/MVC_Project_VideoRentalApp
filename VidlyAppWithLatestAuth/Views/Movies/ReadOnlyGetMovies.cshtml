@model VidlyAppWithLatestAuth.ViewModals.RandomViewModal
@{
    ViewBag.Title = "GetMovies";
}
<style>
    .btn-primary {
        margin-bottom: 10px;
    }
</style>
<h2>Movies</h2>



<table id="movies" class="table table-bordered">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
          
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts{
    <script>
        $(document).ready(function () {
            var table = $('#movies').DataTable({
                ajax: {
                    url: "/api/movies/",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name"
                       
                    }
                    ,
                    {
                        data: "genre.name"
                    }
                   
                ]
            });
            
        });
    </script>
}


